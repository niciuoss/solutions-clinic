# ===========================================
# Solutions Clinic - Variáveis de Ambiente
# ===========================================
# Copie este arquivo para .env e configure os valores

# ============ DATABASE ============
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=solutions_clinic
POSTGRES_USER=solutions_clinic
POSTGRES_PASSWORD=solutions_clinic

# ============ BACKEND ============
BACKEND_PORT=8080

# Security
SECURITY_TOKEN_SECRET=my-super-secret-key-for-development-only-min-32-chars
SECURITY_JWT_ISSUER=solutions-clinic

# ============ FRONTEND ============
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# API URL (usado pelo frontend para chamar o backend)
# Em desenvolvimento local: http://localhost:8080/v1
# Em produção: https://api.seudominio.com/v1
NEXT_PUBLIC_API_URL=http://localhost:8080/v1

# ============ STRIPE ============
STRIPE_API_KEY=
STRIPE_API_SECRET=
STRIPE_WEBHOOK_SECRET=
